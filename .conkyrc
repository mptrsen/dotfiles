alignment top_left
gap_x 1200
gap_y 600
background yes
border_width 1
cpu_avg_samples 2
default_color aaa
default_outline_color aaa
default_shade_color 333
default_bar_size 186 15
default_graph_size 186 25
draw_borders no
draw_graph_borders yes
draw_outline no
draw_shades yes
use_xft yes
xftfont monofur:size=16
